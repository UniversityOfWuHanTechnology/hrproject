<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mohress.training.dao.TblAuditRoleDao">
    <resultMap id="resultMap" type="TblAuditRole">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="node_id" property="nodeId" jdbcType="VARCHAR"/>
        <result column="role_id" property="roleId" jdbcType="VARCHAR"/>
        <result column="priority" property="priority" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="columnList">
        id, node_id, role_id, priority
    </sql>

    <select id="selectByNodeId" resultMap="resultMap">
        SELECT
        <include refid="columnList"/>
        FROM tb_audit_role
        WHERE node_id = #{nodeId}
    </select>

    <select id="selectByNodeIdAndRoleId" resultMap="resultMap">
        SELECT
        <include refid="columnList"/>
        FROM tb_audit_role
        WHERE node_id = #{nodeId} AND role_id = #{roleId}
    </select>
</mapper>