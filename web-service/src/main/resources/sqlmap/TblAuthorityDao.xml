<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mohress.training.dao.TblAuthorityDao">
    <resultMap id="resultMap" type="TblAuthority">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="authority_id" property="authorityId" jdbcType="VARCHAR"/>
        <result column="authority_name" property="authorityName" jdbcType="VARCHAR"/>
        <result column="authority_desc" property="authorityDesc" jdbcType="VARCHAR"/>
        <result column="resource_path" property="resourcePath" jdbcType="VARCHAR"/>
        <result column="enable" property="enable" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="columnList">
        id, authority_id, authority_name, authority_desc, resource_path, enable, create_time, update_time
    </sql>

    <insert id="insert" parameterType="TblAuthority">
        INSERT INTO tb_authority
        (authority_id, authority_name, authority_desc, resource_path, enable)
        VALUE
        (#{authorityId}, #{authority_name}, #{authority_desc}, #{resource_path}, #{enable})
    </insert>

    <select id="selectByAuthorityId" resultMap="resultMap">
        SELECT
        <include refid="columnList"/>
        FROM tb_authority
        WHERE authority_id = #{authorityId}
    </select>

    <select id="selectAll" resultMap="resultMap">
        SELECT
        <include refid="columnList"/>
        FROM tb_authority
    </select>
</mapper>