<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mohress.training.dao.TblAuditLogDao">
    <resultMap id="resultMap" type="TblAuditLog">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="record_id" property="recordId" jdbcType="VARCHAR"/>
        <result column="flow_id" property="flowId" jdbcType="VARCHAR"/>
        <result column="node_id" property="nodeId" jdbcType="VARCHAR"/>
        <result column="auditor" property="auditor" jdbcType="VARCHAR"/>
        <result column="actionList" property="actionList" jdbcType="TINYINT"/>
        <result column="audit_result" property="auditResult" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="columnList">
        id, record_id, flow_id, node_id, auditor, actionList, audit_result, create_time, update_time
    </sql>

    <insert id="insert" parameterType="TblAuditLog">
        INSERT INTO tb_audit_log
        (record_id, flow_id, node_id, auditor, actionList, audit_result)
        VALUE
        (#{recordId}, #{flowId}, #{nodeId}, #{auditor}, #{actionList}, #{auditResult})
    </insert>

    <select id="selectByFlowIdAndAuditor" resultMap="resultMap">
        SELECT
        <include refid="columnList"/>
        FROM tb_audit_log
        WHERE flow_id = #{flowId} AND auditor = #{auditor}
    </select>
</mapper>